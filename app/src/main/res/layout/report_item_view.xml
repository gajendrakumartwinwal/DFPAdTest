<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e2e2e2"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/ad_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Header"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ad_unitid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        android:textSize="14sp"
        tools:text="UnitID: /7176/TOI_App_Android/TOI_App_AOS_India/TOI_App_AOS_IND_PT_ATF" />

    <TextView
        android:id="@+id/ad_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        android:textSize="14sp"
        tools:text="Status: Success" />

    <TextView
        android:id="@+id/ad_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        android:textSize="14sp"
        tools:text="Time:    Success" />


</LinearLayout>